# Server
PORT=4000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://admin:admin@localhost:5432/nurvio?schema=public

# JWT
JWT_ACCESS_SECRET=access
JWT_REFRESH_SECRET=refresh
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d
REFRESH_TOKEN_SALT_ROUNDS=12

# Rate limit
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# SMTP
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_user
SMTP_PASS=your_pass
SMTP_FROM="Nurvio Admin" <no-reply@nurvio-hub.de>

# Redis
REDIS_URL=redis://localhost:6379

# Maintenance
MAINTENANCE_MODE=false

# Docker Postgres/pgAdmin
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin
POSTGRES_DB=nurvio
PGADMIN_DEFAULT_EMAIL=admin@nurvio.local
PGADMIN_DEFAULT_PASSWORD=changeme